<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.birthdaycard.MainActivity">

    <ImageView
        android:src="@drawable/george"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/todo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/almendra"
        android:padding="@dimen/_8dp"
        android:text="@string/happy_birthday"
        android:textColor="@color/_00B8D4"
        android:textSize="@dimen/_48sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/almendra"
        android:text="@string/to"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_36sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:fontFamily="@font/almendra"
        android:padding="@dimen/_16dp"
        android:text="@string/the_father_of_philanthropy"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_24sp" />

</RelativeLayout>
